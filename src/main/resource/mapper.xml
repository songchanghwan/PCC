<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Board">

	<!-- 01. 전체 갯수 얻기        -->
	<select id="getCount" resultType="int" parameterType="int" >
		<![CDATA[
	 		select count(*) from board where board_idx=#{board_idx}
	 	]]>
	</select>
	
	<!-- 02. 1개 얻기 -->

	<select resultType="BoardVO" id="selectByIdx" parameterType="int">
		<![CDATA[
			select * from board	where idx=#{idx}	
		]]>
	</select>

	<!-- 3. 1페이지 얻기 -->
	<select resultType="BoardVO" id="selectList" parameterType="hashMap">
		<![CDATA[
				select * from board where board_idx=#{board_idx} ORDER BY board_idx DESC LIMIT #{startNo},#{endNo} 
			]]>
	</select>
	
	
	
</mapper>